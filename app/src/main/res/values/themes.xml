<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Scandroid_2" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/gray</item>
        <item name="colorPrimaryVariant">@color/gray</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/light_blue</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="SearchViewStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/light_gray</item>
        <item name="android:drawableStart">@drawable/ic_search_gray</item>
        <item name="android:padding">@dimen/search_view_padding</item>
        <item name="android:inputType">text</item>
    </style>

    <style name="AlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/dialog_bg</item>
    </style>

    <style name="ToolbarStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="background">@color/gray</item>
        <item name="titleTextColor">@color/white</item>
        <item name="android:textColorHint">@android:color/white</item>
    </style>

    <style name="BaseAppBarLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="liftOnScroll">true</item>
        <item name="liftOnScrollTargetViewId">@id/scrollView</item>
    </style>

    <style name="DefaultTextViewStyle">
        <item name="android:textSize">@dimen/default_text_size</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="SecondaryTextViewStyle">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">@dimen/default_text_size_very_small</item>
    </style>

    <style name="AppBarLayoutStyle" parent="BaseAppBarLayoutStyle">
        <item name="liftOnScroll">true</item>
        <item name="liftOnScrollTargetViewId">@id/scrollView</item>
    </style>

    <style name="ClickableBackground">
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

</resources>

